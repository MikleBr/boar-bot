generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Joke {
  id   Int    @id @default(autoincrement())
  text String
  type String @default("shame")
}

model Meeting {
  id          Int      @id @default(autoincrement())
  time        String
  description String
  status      String   @default("voting")
  createdAt   DateTime @default(now())
  createdBy   String
  votes       Vote[]
}

model User {
  id         Int      @id @default(autoincrement())
  telegramId String   @unique
  username   String?
  chatId     String
  createdAt  DateTime @default(now())
  votes      Vote[]
}

model Vote {
  userId     Int
  meetingId  Int
  vote       Boolean
  preference String?
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  meeting    Meeting  @relation(fields: [meetingId], references: [id])

  @@id([userId, meetingId])
}
