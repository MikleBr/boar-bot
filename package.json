{
  "name": "boar-bot",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "db:init": "bun run src/database/init.ts",
    "db:reset": "rm -f sqlite.db && bun run db:generate && bun run db:migrate",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "get-chat-id": "bun run src/utils/getChatId.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "grammy": "^1.37.0",
    "hono": "^4.9.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "^6.13.0"
  }
}
